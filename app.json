{
  "name": "Delivery API",
  "description": "REST API for delivery management with PostgreSQL, MongoDB and external integration",
  "repository": "https://github.com/yourusername/delivery-api",
  "logo": "https://spring.io/images/spring-logo-9146a4d3298760c2e7e49595184e1975.svg",
  "keywords": ["java", "spring-boot", "postgresql", "mongodb", "rest-api"],
  "env": {
    "POSTGRES_URL": {
      "description": "PostgreSQL connection URL (will be set automatically by Heroku Postgres addon)",
      "required": false
    },
    "POSTGRES_USER": {
      "description": "PostgreSQL username",
      "required": false
    },
    "POSTGRES_PASSWORD": {
      "description": "PostgreSQL password",
      "required": false
    },
    "MONGO_URI": {
      "description": "MongoDB connection URI (use MongoDB Atlas free tier)",
      "required": true
    },
    "GOOGLE_CLIENT_ID": {
      "description": "Google OAuth2 Client ID",
      "required": true
    },
    "GOOGLE_CLIENT_SECRET": {
      "description": "Google OAuth2 Client Secret",
      "required": true
    },
    "GOOGLE_REDIRECT_URI": {
      "description": "Google OAuth2 Redirect URI (use your Heroku app URL)",
      "required": true
    },
    "OAUTH_ISSUER_URI": {
      "description": "OAuth2 Issuer URI (optional, for JWT validation)",
      "required": false
    },
    "SECURITY_ENABLED": {
      "description": "Enable OAuth2 security (true/false)",
      "value": "false",
      "required": false
    },
    "CORS_ALLOWED_ORIGINS": {
      "description": "Comma-separated list of allowed CORS origins",
      "required": false
    },
    "FRONTEND_URL": {
      "description": "Frontend URL for OAuth2 redirects",
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    "heroku-postgresql:mini"
  ],
  "buildpacks": [
    {
      "url": "heroku/java"
    }
  ]
}


